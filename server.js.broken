                          (acc.fullyUsed ? '#fee' : '#eef') + '">' +
                          'Email: ' + (acc.email || 'N/A') + '<br>' +
                          'Users: ' + (acc.currentUsers || 0) + '/' + (acc.maxUsers || 5) +
                          '<button class="danger" onclick="removeAccount(\\'' + acc.id + '\\', \\'' + password + '\\')" style="float: right;">Remove</button>' +
                          '</div>';
                });
              });
              document.getElementById('accountList').innerHTML = html || '<p>No accounts</p>';
            } else {
              alert('Error: ' + data.error);
            }
          } catch (error) {
            alert('Error: ' + error.message);
          }
        }
        
        async function removeAccount(accountId, password) {
          if (!confirm('Remove this account?')) return;
          
          try {
            const response = await fetch('/api/admin/remove-account', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ accountId: accountId, adminPassword: password })
            });
            const result = await response.json();
            alert(result.success ? 'Removed!' : 'Error: ' + result.error);
            if (result.success) viewAccounts();
          } catch (error) {
            alert('Error: ' + error.message);
          }
        }
      </script>
